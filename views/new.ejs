<% include partials/header %>

  <script src="/js/script.js"> </script>

    <div id="topgridMargin"  class="ui sixteen wide centered grid">
        <div class="four wide column"> </div>
        <div class="eight wide centered column"> 
        
          <h3 class="ui center aligned header">
            <div class="ui red content">
              Log new application(Tool/Framework/Script)
            </div>
          </h3>        
        
        
            <div class="ui segment">
            <form class="ui form" action="/tools" method ="POST" >
            
                <div class="field">
                <label>Application Name</label>
                <input type="text" name="tools[tooName]" placeholder="Application Name"> 
                </div>
                <div class="field">
                <label>Application Logo</label>
                <input type="text" name="tools[image]" placeholder="Application Logo">
                </div>
                
                <div class="field">
                <label>Framework Vs Tool</label>
                <select class="ui fluid dropdown" name="tools[frameworkORtool]" >
                    <option value="">Select Appropriate</option>
                    <option value="Framework">Framework</option>
                    <option value="Tool">Tool</option>
                    <option value="Script">Script</option>
                </select>
                
                
                </div>
                
                <div class="field">
                <label>Account Name</label>
                <input type="text" name="tools[account]" placeholder="Account Name">
                </div>    
            
                <div class="field">
                <label>Application Detailed Description </label>
                <textarea rows="3" name="tools[toolInfo]" placeholder="Application Detailed Description"></textarea>
                </div> 
                
                <div class="field">
                <label>Module Name</label>
                <select class="ui fluid dropdown" name="tools[module]" >
                    <option value="">Select Appropriate Module</option>
                    <option value="Benefits">Benefits</option>
                    <option value="Pricing">Pricing</option>
                    <option value="Fee Schedule">Fee Schedule</option>
                    <option value="Capitation">Capitation</option>
                    <option value="Utility">Utility</option>
                    <option value="Claims">Claims</option>
                    <option value="Clinical">Clinical Edits</option>
                    <option value="Others">Others</option>
                    
                </select>                
                
                
                </div> 
                
                <div class="field">
                <label>Point of Contact</label>
                <input type="text" name="tools[poc]" placeholder="Point Of Contact">
                </div> 
                
                <div class="field">
                <label>Date application created</label>
                <div class="ui input left icon">
                    <i class="calendar icon"></i>
                    <input type="text" name="tools[dateCreated]" placeholder="Date application created" id="selectCreateDate">
                </div>
                </div> 
                
                <div class="field">
                <label>Last Version Update date</label>
                <div class="ui input left icon">
                    <i class="calendar icon"></i>
                    <input type="text" name="tools[lastVersionUpdated]" placeholder="Last Version Update date" id="selectUpdateDate">
                </div>
                </div> 
                
                <div class="field">
                <label>Ownership</label>
                    <input type="text" name="tools[wnership]" placeholder="Ownership">
                </div> 

                <div class="field">
                <div class="ui checkbox">
                  <input type="checkbox" tabindex="0" class="hidden">
                  <label>I agree to the Terms and Conditions</label>
                </div>
                </div>
                
                <button class="ui blue small button" type="submit">Submit</button>

            </form>

          </div>
          </br> </br>            
        </div>

    <br/>
        
        
        <div class="four wide column"> </div>
    </div>




