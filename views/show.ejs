<% include partials/header %>


    
    <div id="topgridMarginShowPage"  class="ui sixteen wide centered grid">
        <div class="four wide column"> </div>
        <div class="eight wide centered column"> 
                <div class="ui raised segment">
                    <div class="ui content">
                        <div class="ui center floated header">
                            <img class="logo" src ="<%=tool.image %>"> <%= tool.tooName %>
                        </div>
                          
                    </div>
                    <h3 class="ui right floated header">
                            <%= tool.module %>
                            <%= tool.frameworkORtool %> 
                    </h3>
                    <div class="ui clearing divider"></div>
                      
                    <div class="ui center aligned content">
                        <div class="description">
                            <p> <i class="info icon"></i> 
                            <%= tool.toolInfo%>
                            </p>
                        </div>
                        
                        <h6 class="ui right floated header">
                            Built on:<%= tool.dateCreated.toDateString() %>

                        </h6>
                        
                        <div class="ui clearing divider"></div>
                    </div>
                    
                    
                    <div class="ui three column very relaxed grid">
                      <div class="column">

                        <div class="ui left floated content">
                                Created by: <%= tool.account %> </br>
                                Point of Contact: <%= tool.poc %>
                        </div>
                      </div>

                      <div class="column">
                      </div>

                      <div class="right aligned column">
                        <p class="ui italic tiny description">
                                Last Version Update:<%= tool.lastVersionUpdated.toDateString() %> <br>
                                 <em>Ownership: <%= tool.wnership %></em>
                        </p>
                        
                      </div>
                      
                    </div>
                    
 

                </div> 

                <form id ="delete" action="/tools/<%= tool._id %>?_method=DELETE" method="POST">
                    <div>
                        <div>
                            <a class ="ui labeled icon small button" href="/tools"><i class="left chevron icon"></i> Go Back</a> 
                            <button class="ui red small right floated button"> Delete</button>
                            <a class ="ui teal small right floated button" href="/tools/<%=tool._id %>/edit">Edit</a>                            
                        </div>
                    </div>
                </form>
        
        </div>
        <div class="four wide column"> </div>
    </div>    

<% include partials/footer %>       