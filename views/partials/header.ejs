    <body>
        
    <div class="ui green top fixed inverted borderless menu">
      <a class="item" href="/" ><i class="home icon"></i><strong>CCOE</strong> </a>
      <a class="item" href="/tools">Application</a>
      
      <a class="item" href="/tools/new">Submission </a>
        
        <div class="ui dropdown item">
            More
            <i class="dropdown icon"></i>
            <div class="menu">
                <div class="item">Open</div>
                <div class="item">Close</div>
                <div class="item">Edit</div>
            </div>
        </div>
      
      
      <a class="item" href="/help">Help</a>
      <div class="right menu">
          <% if(!currentUser){ %>

            <a class="ui item" href="/login"> 
                Login
            </a>
            <a class="ui item" href="/register"> 
                Register
            </a>
            
           <% } else{ %>
            <a class="ui item" href="#"> 
                Signed In As: <%= currentUser.username %>
            </a>
            <a class="ui item" href="/logout"> 
                Logout
            </a>
           <% }  %>
        </div>
